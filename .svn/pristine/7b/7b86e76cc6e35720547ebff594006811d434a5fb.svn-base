<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="310dp"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
	android:background="#000000"
    >

    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#cceaff"
        >
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="fill_parent"
	        android:paddingTop="8dp"
	        android:gravity="center_horizontal" 
	        android:orientation="vertical"
	        android:background="#cceaff"
	        >
	        <LinearLayout 
		        android:layout_width="290dp"
		        android:layout_height="40dp"
		        android:background="@drawable/left_search_bg"
		        android:orientation="horizontal"
	            >
		        <EditText 
			        android:id="@+id/searchEdit"
			        android:layout_width="200dp"
			        android:layout_height="40dp"
			        android:layout_marginLeft="13dp"
			        android:gravity="center_vertical"
			        android:textSize="13sp"
			        android:textColor="#8C8888"
			        android:imeOptions="actionSearch"
			        android:inputType="text"
			        android:hint="검색어를 입력하세요."
			        android:background="@null"
			        
			        />
		        <LinearLayout 
		            android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"
		            />
	            <ImageButton 
			        android:id="@+id/btnSearch"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_vertical"
			        android:layout_marginRight="12dp"
			        android:src="@drawable/btn_search"
			        android:background="@null"
	                />
	        </LinearLayout>

		    
		    <ImageButton
		        android:id="@+id/btnDeviceInfo"
		        android:layout_width="290dp"
		        android:layout_height="50dp"
		        android:layout_marginTop="10dp"
		        android:src="@drawable/left_menu1"
		        android:background="@null"
		        />
		
		    <ImageButton
		        android:id="@+id/btnQna"
		        android:layout_width="290dp"
		        android:layout_height="50dp"
		        android:src="@drawable/left_menu2"
		        android:background="@null"
		        />
		    <ImageButton
		        android:id="@+id/btnGuide"
		        android:layout_width="290dp"
		        android:layout_height="50dp"
		        android:src="@drawable/left_menu6"
		        android:background="@null"
		        />
		    <ImageButton
		        android:id="@+id/btnFaq"
		        android:layout_width="290dp"
		        android:layout_height="50dp"
		        android:src="@drawable/left_menu3"
		        android:background="@null"
		        />
		
		    <ImageButton
		        android:id="@+id/btnSetup"
		        android:layout_width="290dp"
		        android:layout_height="50dp"
		        android:src="@drawable/left_menu4"
		        android:background="@null"
		        />
		
		    <ImageButton
		        android:id="@+id/btnLogout"
		        android:layout_width="290dp"
		        android:layout_height="50dp"
		        android:layout_marginTop="10dp"
		        android:src="@drawable/left_menu_logout"
		        android:background="@null"
		        />
		    
		    <ImageButton
		        android:id="@+id/btnHomepage"
		        android:layout_width="290dp"
		        android:layout_height="50dp"
		        android:layout_marginTop="10dp"
		        android:src="@drawable/left_menu_homepage"
		        android:background="@null"
		        />
		    
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="15.5dp"
				android:layout_weight="1"
		        android:background="@null"
		        />
		    <LinearLayout 
				android:layout_width="wrap_content"
		        android:layout_height="fill_parent"
		        android:gravity="bottom"
		        >
			    <LinearLayout 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:background="@drawable/left_recom_bg"   
			        android:orientation="vertical"
			        android:gravity="bottom"     
			        >
			        <ImageButton
				        android:id="@+id/btnFacebook"
				        android:layout_width="110dp"
				        android:layout_height="39dp"
				        android:layout_marginBottom="5dp"
				        android:src="@drawable/left_btn_fb"
				        android:background="@null"
				        />
				    <ImageButton
				        android:id="@+id/btnKakao"
				        android:layout_width="110dp"
				        android:layout_height="39dp"
				        android:layout_marginBottom="26dp"
				        android:src="@drawable/left_btn_kakao"
				        android:background="@null"
				        />
			        
			    </LinearLayout>
		    </LinearLayout>

	    </LinearLayout>
    </ScrollView>
</LinearLayout>