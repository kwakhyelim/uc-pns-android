<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	android:id="@+id/mainWin"
	android:background="#00000000"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation = "vertical">

	<!--  id, pwd  -->
	<LinearLayout 
		android:layout_width="fill_parent" 
		android:layout_height="220dip"
		android:layout_marginTop="37dip"
		android:layout_marginLeft="20dip"
		android:layout_marginRight="20dip"
		android:background="@drawable/fsp_login_box"
		android:orientation="vertical">
		
		<!--  위에 아이디, 비밀번호 들어가는 부분  -->
		<LinearLayout 
			android:id="@+id/layoutID" 
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"
			android:layout_marginLeft="12dip"
			android:layout_marginRight="12dip"
			android:orientation="vertical"
			android:visibility="visible">
			<EditText  android:id="@+id/edPin" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:paddingLeft="3dip"
				android:background="@drawable/fsp_edt_bg"
				android:inputType="number"
				android:visibility="invisible"/>
				<!-- 	android:hint="@string/fsp_login_lb_pin"   -->
			<LinearLayout 
				android:layout_width = "fill_parent" 
				android:layout_height = "wrap_content"
				android:layout_marginTop="5dip"
				android:orientation="horizontal">
				<LinearLayout 
					android:layout_width="0dip" 
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:orientation="vertical"
					android:layout_marginRight="5dip">
					<EditText android:id="@+id/edUserId" 
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:paddingLeft="3dip"
						android:background="@drawable/fsp_edt_bg"
						android:hint="@string/fsp_login_lb_id"/>
						
					<EditText android:id="@+id/edPwd" 
						android:layout_marginTop="5dip"
						android:paddingLeft="3dip"
						android:layout_width="fill_parent"
						android:background="@drawable/fsp_edt_bg"
						android:layout_height="wrap_content" 
						android:hint="@string/fsp_login_lb_pwd" 
						android:inputType="textPassword"/>
				</LinearLayout>	
				
				<ImageButton 
					android:layout_width="76dip" 
					android:layout_height="fill_parent"
					android:layout_gravity="right"
					android:id="@+id/btnLogin"/>	
			</LinearLayout>
			
			<!--  아래의 아이디 저장, 비밀번호 저장  -->
			<LinearLayout 
				android:layout_width="fill_parent" 
				android:orientation="horizontal" 
				android:layout_gravity="bottom"
				android:gravity="center_vertical" 
				android:layout_height="fill_parent" 
				android:layout_marginBottom="1dip">
			
				<CheckBox 
					android:layout_width="19dip" 
					android:layout_height="19dip"
					android:id="@+id/chkSaveUserId" >
				</CheckBox>	
				<ImageView 
					android:background="@drawable/fsp_login_save_id"
					android:layout_marginLeft="2dip"
					android:layout_height="wrap_content" 
					android:layout_width="wrap_content" 
					android:layout_marginRight="5dip"
				/>
				<CheckBox 
					android:layout_width="19dip" 
					android:layout_height="19dip"
					android:id="@+id/chkSavePwd">
				</CheckBox>
				<ImageView 
					android:background="@drawable/fsp_login_save_pwd"
					android:layout_marginLeft="2dip"
					android:layout_height="wrap_content" 
					android:layout_width="wrap_content" 
				/>
		</LinearLayout>
		<!--  check end  -->

	</LinearLayout>
	<!--  end id, pwd  -->
	
	<!--  프로그래스 바 표시  -->
		<LinearLayout 
			android:id="@+id/layoutProgress" 
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"
			android:layout_marginLeft="12dip"
			android:layout_marginRight="12dip"
			android:orientation="vertical"
			android:visibility="gone">
			<!--  처리 중입니다.  -->
	        <ProgressBar
			    android:id="@+id/progressBar"
			    style="?android:attr/progressBarStyleHorizontal"
			    android:layout_gravity="center"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:progressDrawable="@drawable/fsp_progress_web"
			    android:maxHeight="12dip"    
			    android:minHeight="12dip"    
			    android:max="100" 
			/>
			<TextView
				android:id="@+id/progressStatus"
				android:paddingLeft="5dip"
				android:layout_gravity="left"
				android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:text=""
			/>
		</LinearLayout>	
		<!--  프로그래스 바  -->	
	</LinearLayout>

</LinearLayout>
