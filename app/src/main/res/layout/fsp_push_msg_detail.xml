<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout
 	xmlns:android="http://schemas.android.com/apk/res/android"
 	android:id="@+id/detailLayout"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:orientation="vertical"
  	style="@style/FSPTheme.pushMsg">
  	<LinearLayout 
  		android:id="@+id/layoutTitle"
  		android:layout_width="fill_parent" 
  		android:layout_height="wrap_content"
  		android:background="@null"
  		android:orientation="horizontal"
  		android:gravity="center_vertical">
		<ImageView 
		    android:layout_marginLeft="5dip"
		    android:id="@+id/pushMsgType"
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:background="@drawable/fsp_push_msg_type_s_n"/>
		<TextView 
		    android:id="@+id/sendName"
		    android:layout_height="wrap_content"
		    android:layout_width="0dip"
		    android:layout_weight="1"
		    android:layout_marginLeft="5dip"
		    android:layout_marginRight="5dip"
		    style="@style/FSPTheme.white_10_bold"
		    />
		<ImageView 
		    android:layout_marginRight="5dip"
		    android:id="@+id/imgAddSchedule"
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:visibility="gone"/>
	</LinearLayout>
	<LinearLayout 
  		android:layout_width="fill_parent" 
  		android:layout_height="0dip"
  		android:layout_weight="1"
  		android:orientation="vertical"
  		android:padding="5dip">
		<TextView 
	        android:id="@+id/msg"
	    	android:layout_width="fill_parent" 
	    	android:layout_height="0dip"
	    	android:layout_weight="1"
	    	style="@style/FSPTheme.gray_12_bold"
	    />
		
	    <TextView 
	        android:id="@+id/recvTime"
	    	android:layout_width="fill_parent" 
	    	android:layout_height="wrap_content"
	    	android:gravity="right"
	    	style="@style/FSPTheme.gray_12_bold"
	    />
	</LinearLayout>
	
	<LinearLayout 
	    android:id="@+id/addScheduleLayout"
  		android:layout_width="fill_parent" 
  		android:layout_height="wrap_content"
  		android:orientation="vertical"
  		android:visibility="gone">
		<LinearLayout 
	  		android:layout_width="fill_parent" 
	  		style="@style/FSPTheme.list.headerBg"
	  		android:orientation="horizontal">
			<TextView 
			   android:paddingLeft="5dip"
			   android:gravity="center_vertical"
			   android:layout_width="fill_parent" 
			   android:layout_height="fill_parent" 
	  		   style="@style/FSPTheme.white_10_bold"
			   android:text="@string/fsp_push_msg_add_schedule"/>
		</LinearLayout>
		<LinearLayout 
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:paddingLeft="5dip"
		    android:paddingRight="5dip">
		    <TextView 
		        android:layout_width="50dip" 
		   		android:layout_height="26.5dip"
		   		android:gravity="center_vertical"
		   		style="@style/FSPTheme.gray_12_bold"
		   		android:text="@string/fsp_push_msg_start_dt"/>
		    <TextView 
		        android:id="@+id/txtStartDt" 
		        android:layout_weight="1"
		        android:layout_width="0dip" 
		   		android:layout_height="26.5dip"
		   		style="@style/FSPTheme.gray_12_bold"/>
		</LinearLayout>
		<TextView 
	        android:layout_width="fill_parent"
	        android:layout_height="0.5dip"
	        android:background="@color/fsp_grayLine"/>
		<LinearLayout 
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:paddingLeft="5dip"
		    android:paddingRight="5dip">
		    <TextView
		        android:layout_width="50dip" 
		   		android:layout_height="26.5dip"
		   		android:gravity="center_vertical"
		   		style="@style/FSPTheme.gray_12_bold"
		   		android:text="@string/fsp_push_msg_end_dt"/>
		    <TextView 
		        android:id="@+id/txtEndDt"
		        android:layout_weight="1"
		        android:layout_width="0dip" 
		   		android:layout_height="26.5dip"
		   		style="@style/FSPTheme.gray_12_bold"/>
		</LinearLayout>
		<TextView 
	        android:layout_width="fill_parent"
	        android:layout_height="0.5dip"
	        android:background="@color/fsp_grayLine"/>
		<LinearLayout 
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:paddingLeft="5dip"
		    android:paddingRight="5dip">
		    <TextView
		        android:layout_width="50dip" 
		   		android:layout_height="26.5dip"
		   		android:gravity="center_vertical"
		   		style="@style/FSPTheme.gray_12_bold"
		   		android:text="@string/fsp_push_msg_location"/>
		    <TextView
		        android:id="@+id/txtLoc"
		        android:layout_weight="1"
		        android:layout_width="0dip" 
		   		android:layout_height="26.5dip"
		   		style="@style/FSPTheme.gray_12_bold"/>
		</LinearLayout>
	</LinearLayout>	
	<!--  end 일정추가  -->
	<LinearLayout 
  		android:layout_width="fill_parent" 
  		android:layout_height="wrap_content"
  		android:background="@drawable/fsp_gray_bg_52"
  		android:orientation="horizontal"
  		android:padding="5dip"
  		android:gravity="right">
		<ImageView
		    android:id="@+id/imgDelete"
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"/>
	</LinearLayout>
 </LinearLayout>		