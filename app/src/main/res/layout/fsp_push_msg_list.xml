<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" 
	android:id="@+id/pushMsgListLayout"
	style="@style/FSPTheme.list">

    <LinearLayout 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/searchCondLayout">
        <LinearLayout 
	  		android:layout_width="fill_parent" 
	  		android:layout_height="wrap_content"
	  		android:background="@drawable/fsp_gray_bg_52"
	  		android:orientation="horizontal"
	  		android:gravity="center_vertical"
	  		android:padding="5dip">
	  		<EditText  android:id="@+id/edCond"
	  		    android:layout_weight="1" 
				android:layout_width="0dip"
				android:paddingLeft="2dip"
				android:paddingRight="2dip"
				android:layout_height="wrap_content"
				android:background="@drawable/fsp_edt_bg"/>
  			<ImageView
			    android:id="@+id/imgSearch"
				android:layout_marginLeft="5dip"
			    android:layout_height="wrap_content"
			    android:layout_width="wrap_content"/>
  		</LinearLayout>
  		<LinearLayout 
  		    android:background="@color/fsp_grayBg"
	  		android:layout_width="fill_parent" 
	  		android:layout_height="wrap_content"
	  		android:orientation="vertical"
	  		android:padding="5dip">
  			<TextView 
			   android:layout_width="wrap_content" 
			   android:layout_height="wrap_content" 
	  		   style="@style/FSPTheme.gray_13_bold"
			   android:text="@string/fsp_push_msg_search_cond"/>
  			<LinearLayout 
  			    android:layout_width="fill_parent" 
		  		android:layout_height="wrap_content"
		  		android:orientation="horizontal"
		  		android:gravity="center_vertical"
		  		android:padding="5dip">
  			    <CheckBox 
					style="@style/FSPTheme.chk"
					android:id="@+id/chkU"/>
  			    <TextView 
  			        	android:id="@+id/txtU"
  			        	android:layout_height="wrap_content"
  			        	android:layout_width="wrap_content"
  			        	android:layout_marginLeft="2dip"
  			        	style="@style/FSPTheme.gray_13_bold"
						android:text="@string/fsp_push_msg_type_u"/>
  			    <CheckBox 
					style="@style/FSPTheme.chk"
					android:layout_marginLeft="12dip"
					android:id="@+id/chkN"/>
  			    <TextView 
  			        	android:id="@+id/txtN"
  			        	android:layout_height="wrap_content"
  			        	android:layout_width="wrap_content"
  			        	android:layout_marginLeft="2dip"
  			        	style="@style/FSPTheme.gray_13_bold"
						android:text="@string/fsp_push_msg_type_n"/>
  			    <CheckBox 
					style="@style/FSPTheme.chk"
					android:layout_marginLeft="12dip"
					android:id="@+id/chkT"/>
  			    <TextView 
  			        	android:id="@+id/txtT"
  			        	android:layout_height="wrap_content"
  			        	android:layout_width="wrap_content"
  			        	android:layout_marginLeft="2dip"
  			        	style="@style/FSPTheme.gray_13_bold"
						android:text="@string/fsp_push_msg_type_t"/>
  			    <CheckBox 
					style="@style/FSPTheme.chk"
					android:layout_marginLeft="12dip"
					android:id="@+id/chkO"/>
  			    <TextView 
  			        	android:id="@+id/txtO"
  			        	android:layout_height="wrap_content"
  			        	android:layout_width="wrap_content"
  			        	android:layout_marginLeft="2dip"
  			        	style="@style/FSPTheme.gray_13_bold"
						android:text="@string/fsp_push_msg_type_o"/>
  			</LinearLayout>
  		</LinearLayout>	
  		
        <LinearLayout 
	  		android:layout_width="fill_parent" 
	  		style="@style/FSPTheme.list.headerBg"
	  		android:orientation="horizontal">
			<TextView 
			   android:paddingLeft="5dip"
			   android:gravity="center_vertical"
			   android:layout_width="fill_parent" 
			   android:layout_height="fill_parent" 
	  		   style="@style/FSPTheme.white_10_bold"
			   android:text="@string/fsp_push_msg_search"/>
		</LinearLayout>
	</LinearLayout>	 <!-- end search cond -->
	
	<!--  삭제 시 사용할 모두 삭제 부분  -->	
	<LinearLayout 
  		android:layout_width="fill_parent" 
  		android:layout_height="33dip"
  		android:visibility="gone"
  		android:id="@+id/deleteTopLayout"
  		android:background="@drawable/fsp_push_msg_delete_title_bg"
  		android:orientation="horizontal">
		<TextView 
		   android:paddingLeft="5dip"
		   android:gravity="center_vertical"
		   android:layout_width="0dip" 
		   android:layout_weight="1"
		   android:layout_height="fill_parent" 
  		   style="@style/FSPTheme.white_10_bold"
		   android:text="@string/fsp_push_msg_delete_title"/>
		<ImageView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginRight="5dip"
		    android:layout_gravity="right|center_vertical"
		    android:id="@+id/imgDeleteAll"
		    />
	</LinearLayout>
			
	<!-- 리스트 표시 영역 -->
	<!-- ListActivity의 기본 ListView -->
	<ListView
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:layout_weight="1"	
		android:divider="@null"
  		android:dividerHeight="0dip"
		android:id="@+id/msgList"/>
	
	 <!--  삭제 시 사용할 하단 레이아웃  -->
	 <LinearLayout 
	    android:id="@+id/deleteBottomLayout"
	    android:visibility="gone"
  		android:layout_width="fill_parent" 
  		android:layout_height="wrap_content"
  		android:background="@drawable/fsp_gray_bg_52"
  		android:orientation="horizontal"
  		android:gravity="center_vertical"
  		android:padding="5dip">
 			<ImageView
			    android:id="@+id/imgDelete"
				android:layout_marginLeft="5dip"
			    android:layout_height="wrap_content"
			    android:layout_width="0dip"
			    android:layout_weight="1"/>
 			<ImageView
			    android:id="@+id/imgCancel"
				android:layout_marginLeft="5dip"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:layout_width="0dip"/>
 		</LinearLayout>
</LinearLayout>