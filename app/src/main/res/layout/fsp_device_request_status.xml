<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout
 	xmlns:android="http://schemas.android.com/apk/res/android"
 	android:id="@+id/mainWin"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:orientation="vertical"
  	android:padding="5dip"
  	style="@style/FSPTheme.list">
	<!--  타이틀 바 -->
	<com.sz.fspmobile.view.TitleBarView 
		android:layout_width="fill_parent" 
		android:id="@+id/titleBar"
		android:visibility="gone"
		android:layout_height="35dip"/>
	  	
	<TextView 
		android:id="@+id/txtReqInfo" 
		android:layout_marginTop="50dip"
		style="@style/FSPTheme.lb"
		android:text="승인 대기 상태입니다. 아래의 [확인하기]을 선택하여, 승인 상태를 조회해 볼 수 있습니다."/>
	
	<LinearLayout 
		android:layout_marginTop="15dip"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:gravity="center_horizontal">
		<Button 
			android:id="@+id/btnReqConfirm" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:text="@string/fsp_dev_request_btn_confirm"
		/>
		<Button 
			android:id="@+id/btnReqClose" 
			android:layout_marginLeft="5dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:text="@string/fsp_dev_request_btn_close"
		/>
	</LinearLayout>	
	<TextView 
		android:id="@+id/txtResult" 
		android:layout_marginTop="5dip"
		style="@style/FSPTheme.lb"/>
 </LinearLayout>		