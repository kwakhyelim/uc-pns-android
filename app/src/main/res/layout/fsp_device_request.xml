<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout
 	xmlns:android="http://schemas.android.com/apk/res/android"
 	android:id="@+id/mainWin"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:orientation="vertical"
  	android:padding="5dip"
  	style="@style/FSPTheme.list">
	<!--  타이틀 바 -->
	<com.sz.fspmobile.view.TitleBarView 
		android:layout_width="fill_parent" 
		android:id="@+id/titleBar"
		android:visibility="gone"
		android:layout_height="35dip"/>
	  	
     <TextView 
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_marginTop="50dip"
		style="@style/FSPTheme.lb"
		android:text="@string/fsp_dev_request_lb_notice"/>
		<TextView 
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_marginTop="20dip"
			style="@style/FSPTheme.lb"
			android:text="@string/fsp_dev_request_lb_mobileno"/>
			
		<EditText 
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/edMobileNo" 
			android:layout_marginTop="5dip"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:paddingLeft="3dip"
			android:background="@drawable/fsp_edt_bg"
			android:enabled="false"
		/>	
	<LinearLayout 
	    android:id="@+id/layoutUser" 
	    android:visibility="gone"
		android:layout_marginTop="5dip"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:orientation="vertical">    
		<TextView 
			android:layout_marginTop="5dip"
			style="@style/FSPTheme.lb"
			android:text="@string/fsp_dev_request_lb_userid"/>
	
		<EditText 
			android:id ="@+id/edUserID" 
			android:layout_marginTop="5dip"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:paddingLeft="3dip"
			android:background="@drawable/fsp_edt_bg"
		/>
		
		<TextView 
			android:layout_marginTop="5dip" 
			style="@style/FSPTheme.lb"
			android:text="@string/fsp_dev_request_lb_pwd"/>
	
		<EditText android:id="@+id/edPwd" 
			android:layout_marginTop="5dip"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:paddingLeft="3dip"
			android:background="@drawable/fsp_edt_bg"
			android:inputType="textPassword"
		/>
	</LinearLayout>	
	<LinearLayout 
		android:layout_marginTop="5dip"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:gravity="center_horizontal">
		<Button 
			android:id="@+id/btnReq" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:text="@string/fsp_dev_request_btn_request"
		/>
		<Button 
			android:id="@+id/btnReqCancel" 
			android:layout_marginLeft="5dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:text="@string/fsp_dev_request_btn_cancel"
		/>
	</LinearLayout>	
 </LinearLayout>		