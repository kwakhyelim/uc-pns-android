<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout
 	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:orientation="vertical">
  	<!--  위쪽의 빈공간 -->
	 <LinearLayout 
      	android:layout_width="fill_parent" 
      	android:background="#00000000"
      	android:layout_height="0dip" 
      	android:layout_weight="5"/>
      	
	<LinearLayout 
		android:id="@+id/noticeWin" 
      	android:layout_width="fill_parent" 
      	android:layout_height="0dp" 
      	android:layout_weight="7"
      	android:orientation="vertical"
      	android:layout_margin="6dip"
      	android:background="#191919"
      	android:padding="1dip">
      	
		<!--  제목 부분  -->
		<LinearLayout 
      		android:layout_height="35dip" 
      		android:background="@drawable/fsp_menu_notice_top_bg"
      		android:layout_width="fill_parent"
      		android:gravity="right|center_vertical">
			
			<ImageButton android:layout_width="wrap_content" 
				android:layout_height="fill_parent" 
				android:id="@+id/noticeClose">
			</ImageButton>
	      	
      	</LinearLayout>
      	
		<!--  web view display  -->
		 <LinearLayout 
		 	android:id="@+id/progressBarLayout"
		 	android:layout_width="fill_parent" 
	      	android:layout_height="0dp" 
	      	android:layout_weight="1"
	      	android:orientation="vertical"
	      	android:background="@drawable/fsp_menu_notice_bg"
	      	android:gravity="center">
	      	<LinearLayout 
			 	android:layout_width="wrap_content" 
		      	android:layout_height="wrap_content" 
		      	android:orientation="vertical"
		      	android:background="@drawable/fsp_menu_notice_balloon"
		      	android:layout_gravity="center"
		      	android:gravity="center">
		      		<LinearLayout 
		      			android:layout_width="wrap_content" 
		      			android:layout_height="wrap_content"
		      			android:layout_marginTop="-5dip"
		      			android:layout_marginBottom="5dip"
						android:background="@drawable/fsp_menu_notice_txt">
		      		</LinearLayout>
			      	<!--  처리 중입니다.  -->
			        <ProgressBar
					    android:id="@+id/progressBar"
					    style="?android:attr/progressBarStyleHorizontal"
					    android:layout_gravity="center"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:progressDrawable="@drawable/fsp_progress_notice"
					    android:maxHeight="5dip"    
					    android:minHeight="5dip"    
					    android:max="100"
					/>
				</LinearLayout>	
		</LinearLayout>
		
		<android.webkit.WebView 
				android:layout_width="fill_parent" 
				android:layout_height="0dip"
				android:layout_weight="1"
				android:id="@+id/noticeWebView" 
				android:scrollbars="none"
				android:visibility="gone">
		</android.webkit.WebView>
			
	</LinearLayout>
	<!-- 띄우는 공간 -->
	<LinearLayout 
		android:layout_width="fill_parent" 
		android:layout_height="53dip"/>
 </LinearLayout>