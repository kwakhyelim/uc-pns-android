<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" 
	android:id="@+id/menuSubListLayout"
	style="@style/FSPTheme.list">
	<!--  타이틀 바 -->
	<com.sz.fspmobile.view.TitleBarView 
		android:layout_width="fill_parent" 
		android:id="@+id/titleBar"
		android:visibility="gone"
		android:layout_height="35dip"/>
	
	<!-- ListView에서 클릭되는 Item 확인 용 TextView -->
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="0dip"
		android:layout_weight="1"
	>
		<!-- ListActivity의 기본 ListView -->
		<ListView
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"	
			android:divider="@null"
   			android:dividerHeight="0dip"
			android:id="@+id/menuList"/>
		
		<!-- ListView가 비어있을때(empty) 표현되는 TextView -->
		<TextView 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginTop="3dp"
			android:id="@id/android:empty" 
			android:text="@string/fsp_menu_sub_empty"/>
	</LinearLayout>
		
		<!--  메뉴 바 -->
	<com.sz.fspmobile.view.MenuBarView 
		android:layout_width="fill_parent" 
		android:id="@+id/menuBar"
		android:layout_height="53dip"/>
</LinearLayout>